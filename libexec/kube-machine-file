#!/usr/bin/env bash
# Summary: Detect the file that sets the current kube machine

set -e
[ -n "$KUBE_DEBUG" ] && set -x

find_local_machine_file() {
  local root="$1"
  while [ -n "$root" ]; do
    if [ -e "${root}/.kube-machine" ]; then
      echo "${root}/.kube-machine"
      exit
    fi
    root="${root%/*}"
  done
}

find_local_machine_file "$KUBE_DIR"
[ "$KUBE_DIR" = "$PWD" ] || find_local_machine_file "$PWD"

global_machine_file="${KUBE_ROOT}/machine"

if [ -e "$global_machine_file" ]; then
  echo "$global_machine_file"
elif [ -e "${KUBE_ROOT}/global" ]; then
  echo "${KUBE_ROOT}/global"
elif [ -e "${KUBE_ROOT}/default" ]; then
  echo "${KUBE_ROOT}/default"
else
  echo "$global_machine_file"
fi
